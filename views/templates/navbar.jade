#login-modal.modal.fade(tabindex='-1', role='dialog')
  .modal-dialog.modal-sm
    .modal-content
      .modal-header
        button.close(type='button', data-dismiss='modal', aria-label='Close')
          span(aria-hidden='true') Ã—
        h4#myModalLabel.modal-title
          span(ng-show='!signupMode') Login
          span(ng-show='signupMode') Register
      .modal-body
        .alert.alert-danger(ng-show='err') {{err}}
        button.btn.btn-block.btn-primary(ng-click="authenticate('facebook')") Sign in with Facebook
        button.btn.btn-block.btn-primary(ng-click="authenticate('google')") Sign in with Google
        form
          .form-group
            label(for='') Email
            input.form-control(type='text', ng-model='user.email')
          .form-group
            label(for='') Password
            input.form-control(type='password', ng-model='user.password')
          .form-group(ng-show='signupMode')
            label(for='') Confirm Password
            input.form-control(type='password', ng-model='user.confirm')
      .modal-footer
        a.btn.btn-link(ng-click='signupMode = true', ng-hide='signupMode') Register
        button.btn.btn-primary(type='submit', ng-hide='signupMode', ng-click='login()') Log In
        a.btn.btn-link(ng-click='signupMode = false', ng-show='signupMode') Login
        button.btn.btn-primary(type='submit', ng-cloak='', ng-show='signupMode', ng-click='createAccount()') Sign Up

#new-zoink.modal.fade(tabindex='-1', role='dialog', aria-labelledby='new-zoinkLabel')
  .modal-dialog(role='document')
    .modal-content
      form(ng-submit='createZoink()')
        .modal-body
          .form-group
            label(for='') Title*
            input.form-control(type='text', ng-model='zoink.title', required='')
          .form-group
            label(for='') Location
            input.form-control(type='text', ng-model='zoink.location')
          .row
            .form-group.col-xs-6
              label(for='') Starts At
              input.form-control(type='text', ng-model='zoink.startsAt')
            .form-group.col-xs-6
              label(for='') Ends At
              input.form-control(type='text', ng-model='zoink.endsAt')
        .modal-footer
          button.btn.btn-default(type='button', data-dismiss='modal') Close
          button.btn.btn-primary(type='submit') Zoink!
